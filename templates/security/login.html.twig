{% extends 'base.html.twig' %}

{% block body %}
    <div class="grid grid-cols-3">
        <div class="col-start-2 my-28 border p-3.5 rounded-lg text-center shadow-lg">
            <h1 class="text-2xl"><b>CONNEXION</b></h1>

            {{ form_start(form) }}
                {{ form_errors(form) }}
        
                {{ form_row(form.username , {'attr': {'class': 'border p-1.5 mt-4 mb-2.5 ml-2 rounded-lg'}}) }}
                {{ form_row(form.password , {'attr': {'class': 'border p-1.5 mb-4 ml-2 rounded-lg'}}) }}

                <button class="bg-blueHome text-white p-2 rounded-lg border hover:shadow-lg" type="submit">Se connecter</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
