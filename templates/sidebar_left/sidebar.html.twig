<div class="float-left p-20 max-w-sm flex flex-col gap-8">
    <div>
        <h3 class="text-yellow-800 text-lg mb-1">Accès rapide</h3>
        <ul class="list-none text-sm">
            <li><span class="font-bold"> > </span> <a href="#"> Offre Permanantes / Billeterie </a></li>
            <li><span class="font-bold"> > </span> <a href="#"> Nous Contacter </a></li>
        </ul>
    </div>
    <div>
        <h3 class="text-yellow-800 text-lg mb-1">Informations de Contact</h3>
        <ul class="list-none text-sm">
            <li><span class="font-bold"> > </span> Par téléphone: <span class="text-blue-600">+3303030303</span></li>
            <li><span class="font-bold"> > </span> Par email: <a href="mailto:cse@myceestvincent.fr" class="text-blue-600">cse@myceestvincent.fr</a></li>
            <li><span class="font-bold"> > </span> Au Lycée: <a href="https://goo.gl/maps/ywkb8v1x5nSnN4KRA" target="_blank" class="text-blue-600">Bureau du CSE (1er étage bâtiment Saint-Vincent)</span></li>
        </ul>
    </div>
    <div>
        <h3 class="text-yellow-800 text-lg mb-1">Nos Partenaires</h3>
        
        <div class="slider relative overflow-hidden">
             {% if partnerships is not empty %}
                <!--partie principale du carousel-->
                <div class="slider-inner flex flex-row flex-nowrap relative right-0 py-2 transition-right duration-500">
                    {% for partnership in partnerships %}
                        <div class="slider-item flex-1 flex-shrink-0 block">
                        <a class="box shadow-md flex flex-row items-center justify-center text-white bg-black mr-10 ml-10 rounded-lg" href="{{ partnership.linkToWebsite }}">
                            {% if partnership.file.filePath is defined %}
                                <img src="{{ partnership.file.filePath }}">
                            {% endif %}
                        </a>
                    </div>
                    {% endfor %}
                </div>
                
                <!--controls du carousel-->
                <div class="control flex absolute justify-between left-5 right-5 top-42%">
                    <button id="prev" class="outline-none bg-transparent text-3xl border-0"><span>&ltrif;</span></button>
                    <button id="next" class="outline-none bg-transparent text-3xl border-0"><span>&rtrif;</span></button>
                </div>
            
            </div>
            <!--preview du carousel-->
            <div class="preview">
                {% set ind = 1 %}
                {% for partnership in partnerships %}
                    <button class="preview-item" id="pslide.{{ ind }}">
                        <div class="pbox.{{ ind }}">
                            <div class="w-3 h-3 bg-gray-400 rounded-full">
                        </div>
                    </button>
                    {% set ind = ind + 1 %}
                {% endfor %}
            </div>
        {% endif %}
    </div>
    </div>
</div>
